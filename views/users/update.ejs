<!DOCTYPE html>
<html lang="en">
	<head>
		<!-- Required meta tags -->
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />

		<!-- icon tab -->
		<link rel="icon" href="/images/icon.jpg">
		
		<!-- Bootstrap CSS -->
		<link
			href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
			rel="stylesheet"
			integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
			crossorigin="anonymous"
		/>

		<link rel="stylesheet" href="/css/style.css" />
		<link
			rel="stylesheet"
			href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css"
		/>
		<title><%= company.name %> LesGO</title>
	</head>
	<body>
		<header id="header" style="min-height: 60vh; background-color: #dcdcdc">
			<nav
				class="navbar navbar-expand-lg bg-light navbar-light p-3 navbar-partner"
			>
				<div class="container">
					<a class="navbar-brand" href="/#"
						><img src="/images/logo.png" alt="" width="70px"
					/></a>
					<button
						class="navbar-toggler"
						type="button"
						data-bs-toggle="collapse"
						data-bs-target="#navbarNavAltMarkup"
						aria-controls="navbarNavAltMarkup"
						aria-expanded="false"
						aria-label="Toggle navigation"
					>
						<span class="navbar-toggler-icon"></span>
					</button>
					<div
						class="collapse navbar-collapse justify-content-end"
						id="navbarNavAltMarkup"
					>
						<div class="navbar-nav">
							<a class="nav-link mx-3" aria-current="page" href="/">Home</a>
							<a class="nav-link mx-3" href="/#course">Courses</a>
							<a class="nav-link active mx-3" href="/partners">Partners</a>
						</div>
					</div>
				</div>
			</nav>
			<section
				class="d-flex justify-content-center align-items-center"
				style="min-height: calc(60vh - (73.58px * 2))"
			>
				<h2
					class="text-uppercase fw-bold"
					style="
						letter-spacing: 2.5px;
						color: rgb(39, 39, 39);
						text-shadow: 3px 4px 4px rgba(71, 71, 71, 0.466);
					"
				>
					<%= company.name %>
				</h2>
			</section>
			<section
				class="bg-white navbar-partner d-flex flex-column flex-md-row"
				style="min-height: 73.58px; width: 100%"
			>
				<div
					class="w-100 d-flex flex-column justify-content-center align-items-center px-0 py-2"
				>
					<h6 style="text-decoration: underline" class="text-uppercase fw-bold">
						Courses
					</h6>
					<div class="d-flex flex-wrap justify-content-center">
						<% company.Courses.forEach(e => { %>
						<p class="mb-0 mx-2"><%= e.name %></p>
						<% }) %>
					</div>
				</div>
				<div style="border: 1px solid #dcdcdc"></div>
				<div
					class="w-100 d-flex flex-column justify-content-center align-items-center px-0 py-2"
				>
					<h6 style="text-decoration: underline" class="fw-bold">Address</h6>
					<p class="mb-0"><%= company.address %></p>
				</div>
			</section>
		</header>
		<main id="main" class="container py-4" style="min-height: 65vh">
			<div class="card my-4">
				<div
					class="card-header px-4 d-flex justify-content-between align-items-center"
				>
					<h5 class="mb-0">Update User</h5>
				</div>
				<div class="card-body">
					<form action="/partners/<%= company.id %>/users/update/<%= user.id %> " method="post">
						<div class="row">
							<div class="mb-3 col-md-5">
								<label for="name" class="form-label">Name</label>
								<input required
									type="text"
									value="<%= user.name %>"
									class="form-control form-control-sm"
									id="name"
									name="name"
									aria-describedby="name"
								/>
								<div id="name" class="form-text">Input name company.</div>
							</div>
							<div class="mb-3 col-md-2">
								<label for="age" class="form-label">Age</label>
								<input required
									type="number"
									value="<%= user.age %>"
									class="form-control form-control-sm"
									name="age"
									id="age"
									aria-describedby="age"
								/>
								<div id="age" class="form-text">Input age.</div>
							</div>
							<div class="mb-3 col-md-5">
								<label for="gender" class="form-label">Gender</label>
								<select
									class="form-select form-select-sm"
									id="gender"
									name="gender"
									aria-label=".form-select-sm example"
								>
									<option value="MALE" <%= user.gender == 'MALE' ? 'selected' : '' %> >MALE</option>
									<option value="FEMALE" <%= user.gender == 'MALE' ? 'selected' : '' %>>FEMALE</option>
								</select>
								<div id="gender" class="form-text">Input Gender.</div>
							</div>
						</div>
						<div class="mb-3">
							<label for="course" class="form-label">Course</label>
							<hr class="mt-0" />
							<div class="d-flex flex-wrap">
								<% company.Courses.forEach((e) => { %>
									<% if(courseId.includes(e.id)) { %> 
									<div class="form-check me-4">
										<input
											class="form-check-input"
											name="course_id"
											type="checkbox"
											value="<%= e.id %>"
											id="flexCheckDefault<%= e.id %>"
											checked
										/>
										<label
											class="form-check-label"
											for="flexCheckDefault<%= e.id %>"
										>
											<%= e.name %>
										</label>
									</div>
									<% } else { %>
										<div class="form-check me-4">
											<input
												class="form-check-input"
												name="course_id"
												type="checkbox"
												value="<%= e.id %>"
												id="flexCheckDefault<%= e.id %>"
											/>
											<label
												class="form-check-label"
												for="flexCheckDefault<%= e.id %>"
											>
												<%= e.name %>
											</label>
										</div>
									<% } %> 
								<% }) %>
							</div>
							<hr class="mb-0" />
							<div id="name" class="form-text">Select the course you want</div>
						</div>
						<div class="mb-3">
							<label for="address" class="form-label">Address</label>
							<textarea required
								class="form-control form-control-sm"
								name="address"
								id="address"
								style="height: 50px"
							><%= user.address %> </textarea>
							<div id="address" class="form-text">Input Address.</div>
						</div>
						<div class="d-flex justify-content-end">
							<a
								href="/partners/<%= company.id %> "
								class="btn btn-secondary btn-sm mx-2 px-4"
								>Back</a
							>
							<button type="submit" class="btn btn-primary btn-sm mx-2 px-4">
								Update
							</button>
						</div>
					</form>
				</div>
			</div>
		</main>
		<footer style="min-height: 100px">
			<div class="container py-2">
				<div class="d-flex justify-content-between align-items-center">
					<div class="d-flex">
						<a
							href="/#header"
							class="nav-link text-uppercase text-light"
							style="color: black; font-size: 14.5px; letter-spacing: 0.6px"
							>Home</a
						>
						<a
							href="/#course"
							class="nav-link text-uppercase text-light"
							style="color: black; font-size: 14.5px; letter-spacing: 0.6px"
							>Courses</a
						>
						<a
							href="#header"
							class="nav-link text-uppercase text-light"
							style="color: black; font-size: 14.5px; letter-spacing: 0.6px"
							>Partners</a
						>
					</div>
					<div>
						<a
							href="#header"
							class="nav-link text-center fw-bold text-uppercase text-light d-flex flex-column"
							style="letter-spacing: 2px; font-size: 14px"
							><i class="bi-caret-up-fill"></i>Back To Top</a
						>
					</div>
				</div>
				<hr style="color: #adb5bd" class="my-1" />
				<div class="mb-3">
					<p
						class="text-uppercase footer-text text-center my-3"
						style="letter-spacing: 0.6px"
					>
						Developed by
						<a
							href="https://github.com/fahrularsyandra"
							style="text-decoration: none; color: white; font-weight: bold"
							>Arsya</a
						>
						&
						<a
							href="https://github.com/bddd-bags"
							style="text-decoration: none; color: white; font-weight: bold"
							>Bagas</a
						>
						2022
					</p>
				</div>
			</div>
		</footer>
